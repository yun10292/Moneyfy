<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Moneyfy" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- 메인 컬러 설정 -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/plusColorSoft</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surface / 배경 설정 -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnSurface">@color/primaryText</item>

        <!-- 텍스트 및 아이콘 색상 기본값 (Material 적용용) -->
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>

        <!-- 폰트 적용 -->
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="fontFamily">@font/pretendard_regular</item>

        <!-- 상태바 & 내비바 색상 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <item name="editTextStyle">@style/EditText.Default</item>


    </style>
</resources>
